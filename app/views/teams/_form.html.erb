<div class="field">
  <div class="control">
    <label class="label">
      Team Name
    </label>
    <input type="text" class="input" />
  </div>
</div>

<div class="content">
  <h2 class="title is-4">
    Invite Users
  </h2>
  <p>Invite users to join this team</p>
</div>

<div class="field">
  <div class="control">
    <label class="label">Name</label>
    <input type="text" class="input" />
  </div>
</div>

<div class="field">
  <div class="control">
    <label class="label">Email</label>
    <input type="text" class="text" />
  </div>
</div>

<input type="hidden" value="<%= current_user.id %>"/>

<div class="field">
  <div class="control">
    <button class="button is-small">
      Remove
    </button>
  </div>
</div>

<hr />

<div class="field">
  <div class="control">
    <button class="button is-link">Add User</button>
  </div>
</div>

<hr />

<div class="field">
  <div class="control">
    <% if current_page?(new_team_path) %>
      <button class="button is-success is-large">Create Team</button>
    <% else %>
     <button class="button is-success is-large">Save Team</button>
    <% end %>
  </div>
</div>
